generator client {
  provider = "prisma-client-js"
  output   = "../app/infra/datasource/generated"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  pages      Page[]
  categories Category[]
}

model Page {
  id        String   @id @default(uuid())
  projectId String
  level     Int
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id])
  items   Item[]

  @@unique([projectId, level])
  @@unique([projectId, name])
}

model Category {
  id        String   @id @default(uuid())
  projectId String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  items   Item[]
  project Project @relation(fields: [projectId], references: [id])
}

model Item {
  id         String   @id @default(uuid())
  pageId     String
  categoryId String
  name       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  page         Page         @relation(fields: [pageId], references: [id])
  category     Category     @relation(fields: [categoryId], references: [id])
  connections  Connection[]
  dependencies Dependency[]
}

model Connection {
  id        String   @id @default(uuid())
  from      String
  to        String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  item Item @relation(fields: [from], references: [id])
  @@unique([from, to])
}

model Dependency {
  id        String   @id @default(uuid())
  parent    String
  child     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  item Item @relation(fields: [parent], references: [id])
  @@unique([parent, child])
}
