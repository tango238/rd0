generator client {
  provider = "prisma-client-js"
  output   = "../app/infra/datasource/generated"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id        String      @id @default(uuid())
  name      String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  Page      Page[]
  ModelType ModelType[]
}

model Page {
  id        String   @id @default(uuid())
  projectId String
  level     Int
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id])
  Model   Model[]
  @@unique([projectId, level])
  @@unique([projectId, name])
}

model ModelType {
  id        String   @id @default(uuid())
  projectId String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Model     Model[]
  project   Project  @relation(fields: [projectId], references: [id])
}

model Model {
  id          String   @id @default(uuid())
  pageId      String
  modelTypeId String
  name        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  page      Page      @relation(fields: [pageId], references: [id])
  modelType ModelType @relation(fields: [modelTypeId], references: [id])
}

model Connection {
  from      String
  to        String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([from, to])
}

model Dependency {
  parent    String
  child     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([parent, child])
}
